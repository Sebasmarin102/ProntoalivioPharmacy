@model IEnumerable<ProntoalivioPharmacy.Data.Entities.MedicineType>

<table class="table table-striped table-responsive-md table-bordered smfont"  id="MedicineTypesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductsNumber)
            </th>

            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "MedicineTypes", new { id = 0 }, Context.Request.Scheme)' , 'Nuevo tipo de medicamento/producto')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i> Tipo de medicamento</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductsNumber)
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "MedicineTypes", new { id=item.Id }, Context.Request.Scheme)' , 'Actualizar tipo de medicamento')" class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
            </td>
        </tr>
        }
    </tbody>
</table>
