@model ProntoalivioPharmacy.Data.Entities.Neighborhood

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Esta seguro de querer borrar?</h3>
<div>
    <partial name="_NeighborhoodDetails" />
    <form asp-action="DeleteNeighborhood">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
        <a asp-action="Details" asp-route-id="@Model?.City.Id" class="btn btn-outline-success">Regresar</a>
    </form>
</div>
