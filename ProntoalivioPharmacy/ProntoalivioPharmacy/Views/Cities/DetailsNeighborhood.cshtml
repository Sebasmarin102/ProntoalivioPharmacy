@model ProntoalivioPharmacy.Data.Entities.Neighborhood

@{
    ViewData["Title"] = "Details";
}

<style>
</style>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<h1>Detalles</h1>

<div>
    <partial name="_NeighborhoodDetails" />
</div>
<div>
    <a asp-action="AddLaboratory" asp-route-id="@Model?.Id" class="btn btn-outline-primary">Agregar laboratorio/farmacia</a>
    <a asp-action="EditNeighborhood" asp-route-id="@Model?.Id" class="btn btn-outline-warning">Editar barrio</a>
    <a asp-action="Details" asp-route-id="@Model?.City.Id" class="btn btn-outline-success">Regresar</a>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Laboratorios/Farmacias</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Laboratories.FirstOrDefault().Name)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Laboratories)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a asp-action="EditLaboratory" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
                                    <a asp-action="DetailsLaboratory" asp-route-id="@item.Id" class="btn btn-outline-info">Detalles</a>
                                    <a asp-action="DeleteLaboratory" asp-route-id="@item.Id" class="btn btn-outline-danger">Borrar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                [25, 50, 100, 200, -1],
                [25, 50, 100, 200, "Todos"]
            ]
        });
    });
</script>
}

